<h1> New Game </h1>
<%alphabet = ('A'..'Z').to_a%>
<%random = alphabet.sample(9)%>
<table>
  <tr>
    <%random.each do |letter|%>
      <td>
        <div class = "letters">
          <%=letter%>
        </div>
      </td>
    <%end%>
  </tr>
</table>


<form action="score" method="post" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag('letters', value = random, options = {}) %>
  <input type = "text" name = "answer">
  <input type = "submit" value="submit!">

</form>
